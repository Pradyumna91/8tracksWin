<Application
    x:Class="_8tracksWin.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_8tracksWin"
    RequestedTheme="Light">

    <Application.Resources>
        <SolidColorBrush x:Key="ThemeColour">#2F364A</SolidColorBrush>
        <SolidColorBrush x:Key="HoverThemeColour">#FF434D68</SolidColorBrush>
        <SolidColorBrush x:Key="PressedThemeColour">#FF1F2330</SolidColorBrush>
        <SolidColorBrush x:Key="PageBackground">#FF1F2330</SolidColorBrush>
    </Application.Resources>
</Application>
